<section>
  <div id="profile_index">
    <div class="container">
      <%= form_tag(profiles_path, :method => "get", id: "search-form") do %>
      <%= text_field_tag :search, params[:search], placeholder: "Enter keywords" %>
      <%= submit_tag "Search" %>
      <% end %>

      <% if @profiles.present? %><br><br>
        <div id="profiles_results">
          <% for profile in @profiles do %>
            <div class="row">
              <div class="col-xs-4">
                <%= image_tag "default_profile.jpg", :width => 50 %>
              </div><br><br>
              <div class="col-xs-8 col-xs-offset-1">
                <div class="card">
                  <div class="card-block">
                    <p class="card-text">
                      <b><%= link_to profile.user.first_name, profile_path(profile.user_id) %>
                      <%= link_to profile.user.last_name, profile_path(profile.user_id) %> </b><br>
                      <small><%= profile.city %>,
                      <% if ! profile.state.blank? %>
                        <%= profile.state %>,
                      <% end %><%= profile.country %></small><br>
                    <div><b class="card-title">Occupation: </b><%= profile.occupation %></div></p><hr/>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p>There are no profiles containing the term(s) <%= params[:search] %>.</p>
      <% end %>
    </div>
  </div>
</section>
