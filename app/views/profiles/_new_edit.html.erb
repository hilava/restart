<%= form_for @profile do |f| %>
    <div class="row">
      <div class="well col-md-4 col-md-offset-4">
        <div class="form-group">
          <%= f.text_field :country, class: "form-control", placeholder: "Country", autofocus: true %>
        </div>
        <div class="form-group">
          <%= f.text_field :state, class: "form-control", placeholder: "State"%>
        </div>
        <div class="form-group">
          <%= f.text_field :city, class: "form-control", placeholder: "City"%>
        </div>
        <div class="form-group">
          <%= f.text_field :occupation, class: "form-control", placeholder: "Profession"%>
        </div>
        <div class="form-group">
          <%= f.text_field :linkedin, class: "form-control", placeholder: "Linkedin"%>
        </div>
        <div class="form-group">
          <%= f.text_area :resume, class: "form-control", placeholder: "Resume"%>
        </div>
        <!-- uploadcare code -->
        <div class="form-group">
          <input type="hidden" role="uploadcare-uploader" name="profile[image]"
                  value="<%= @profile.image %>"
                   data-crop="disabled"
                   data-preview-step="true"
                   data-images-only="true" />
        <div>
      <div>
        <center><%= f.submit "Save", class: "btn btn-success" %></center>
      </div>
    </div>
  <% end %>
</div>
