<div id="profile_show" class="top">
  <section>
    <div class="container">
      <div class="row">
        <div class="col-md-4">
          <%= image_tag "default_profile.jpg", :width => 150 %>
        </div>
        <div class="col-md-8">
          <div class="card">
            <div class="card-block">
              <h2 class="card-title"><%= @user.first_name %> <%= @user.last_name %></h2>
              <small><%= @profile.city %>,
              <% if ! @profile.state.blank? %>
                <%= @profile.state %>,
              <% end %><%= @profile.country %></small><hr>
              <p class="card-text"><h3><%= fa_icon "briefcase", :class => 'fa-icon' %> Occupation: <%= @profile.occupation %></h3><br>
                  <u><b>Contact Information</b></u>
                  <h4><%= fa_icon "envelope", :class => 'fa-icon' %> <%= @user.email %></h4>
                  <%= fa_icon "code", :class => 'fa-icon' %> <%= link_to "Linkedin Page", @profile.linkedin %><hr>
                  <h4>Resume: </h3><%= @profile.resume %></p><hr>
              <% if current_user == @user%>
                <div class="row">
                  <div class="col-md-8">
                    <h3><%= link_to edit_profile_path(@profile) do %>
                        <i class="fa fa-edit" aria-hidden="true"></i><% end %></h3>
                  </div>
                  <div class="col-md-4">
                    <h3><%= link_to profile_path(@profile), method: :delete,
                        data:{confirm: "Are you sure you want to delete this profile?"} do %>
                        <i class="fa fa-trash" aria-hidden="true"></i><% end %><h3>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
        </div>
      <br/>
    </div>
  </section>
</div>
