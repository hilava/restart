<div class="top col-md-8 col-md-offset-2">
  <div class="panel panel-default">
    <div class="panel-heading">
      <div class="row">
        <div class="image col-md-3">
          <% if ! @profile.image.blank? %>
            <%= image_tag @profile.image, :width => 100   %>
          <% else %>
            <%= image_tag "default_profile.jpg", :width => 100 %>
          <% end %>
        </div>
        <div class="col-md-3">
          <h2 class="panel-title"><%= @user.first_name %> <%= @user.last_name %></h2><br>
          <b>Occupation: <%= @profile.occupation %></b><br><br>
          <small><%= @profile.city %>,
          <% if ! @profile.state.blank? %>
            <%= @profile.state %>,
          <% end %><%= @profile.country %></small>
        </div>
      </div>
    </div>
    <div class="panel-body">
      <h4>Resume: </h4><%= @profile.resume %>
    </div>
    <div class="panel-footer">
      <b>Contact Information</b><br><br>
      <div><%= fa_icon "envelope", :class => 'fa-icon' %> <u><%= mail_to @user.email %></u></div>
      <br>
      <div><%= fa_icon "linkedin-square", :class => 'fa-icon' %> <u><%= link_to "Linkedin Page", @profile.linkedin %></u></div>
    </div>
  </div>
  <% if current_user == @user%>
  <div class="row">
    <div class="col-md-4 col-md-offset-3">
        <%= button_to "Edit", edit_profile_path(@profile), method: :get, class:"btn btn-warning" %>
      </div>
    <div class="col-md-4 col-md-offset-1">
          <%= button_to "Delete", profile_path(@profile), method: :delete, class:"btn btn-danger",
           data:{confirm: "Are you sure you want to delete this job post?"} %>
    </div>
  </div>
  <% end %>
</div>
