<div id="profile_show" class="top">
  <section>
    <div class="container">
      <div class="row">
        <div class="col-md-4">
          <% if ! @profile.image.blank? %>
            <%= image_tag @profile.image, :width => 150   %>
          <% else %>
            <%= image_tag "default_profile.jpg", :width => 150 %>
          <% end %><br><br>
        </div>
        <div class="col-md-8">
          <div class="card">
            <div class="card-block">
              <h2 class="card-title"><%= @user.first_name %> <%= @user.last_name %></h2>
              <small><%= @profile.city %>,
              <% if ! @profile.state.blank? %>
                <%= @profile.state %>,
              <% end %><%= @profile.country %></small><hr>
              <p class="card-text"><h3><%= fa_icon "briefcase", :class => 'fa-icon' %> Occupation: <%= @profile.occupation %></h3><br>
                  <u><b>Contact Information</b></u>
                  <h4><%= fa_icon "envelope", :class => 'fa-icon' %> <%= mail_to @user.email %></h4>
                  <%= fa_icon "code", :class => 'fa-icon' %> <%= link_to "Linkedin Page", @profile.linkedin %><hr>
                  <h4>Resume: </h3><%= @profile.resume %></p><hr>
              <% if current_user == @user%>
                <div class="row">
                  <div class="col-md-8">
                    <%= button_to "Edit", edit_profile_path(@profile), method: :get, class:"btn btn-warning" %>
                  </div>
                  <div class="col-md-4">
                      <%= button_to "Delete", profile_path(@profile), method: :delete, class:"btn btn-danger",
                       data:{confirm: "Are you sure you want to delete this job post?"} %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
        </div>
      <br/>
    </div>
  </section>
</div>
