<section id="new_profile">
  <%= form_for @profile do |f| %>
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <div class="form-group">
            <%= f.text_field :country, class: "form-control", placeholder: "Country", autofocus: true %>
          </div>
          <div class="form-group">
            <%= f.text_field :state, class: "form-control", placeholder: "State"%>
          </div>
          <div class="form-group">
            <%= f.text_field :city, class: "form-control", placeholder: "City"%>
          </div>
          <div class="form-group">
            <%= f.text_field :occupation, class: "form-control", placeholder: "Occupation"%>
          </div>
          <div class="form-group">
            <%= f.text_field :linkedin, class: "form-control", placeholder: "Linkedin"%>
          </div>
          <div class="form-group">
            <%= f.text_area :resume, class: "form-control", placeholder: "Resume"%>
          </div>
        <div>
          <center><%= f.submit "Save", class: "btn btn-success" %></center>
        </div>
      </div>
    <% end %>
  </div>
<section>
