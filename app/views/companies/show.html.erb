<section class="top">
  <div class="well col-md-10 col-md-offset-1">
    <div class="col-md-3 col-md-offset-1">
      <% if ! @company.logo.blank? %>
        <%= image_tag @company.logo, :width => 100 %>
      <% else %>
        <%= image_tag "briefcase.jpg", :width => 100 %><br><br>
      <% end %>
    </div>
    <div class="col-md-7">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><%= @company.name %></h3>
        </div>
        <div class="panel-body">
          <div><b>Description: </b><%= @company.description %></div><br>
          <div><u><%= link_to "Company Website", @company.website %></div>
        </div>
      </div>
    </div>
  </div>
  <% if @jobs.present? %>
    <% for job in @jobs do %>
        <div class="well col-md-6 col-md-offset-3">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title"><u><%= link_to job.title, job_path(job.id) %></u></h3>
            </div>
            <div class="panel-body">
              <small><b>Location: </b><%= job.city %>,
              <% if ! job.state.blank? %>
                <%= job.state %>,
              <% end %><%= job.country %></small><br><br>
              <div><b>Category: </b><%= job.category %></div>
            </div>
          </div>
        </div>
      <% end %>
  <% else %>
    <p>There are no jobs containing the term(s) <%= params[:search] %>.</p>
  <% end %>
</section>
